@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <div style="padding: 1rem; border-bottom: 1px solid var(--neutral-stroke-divider);">
            <strong style="color: var(--neutral-foreground-rest); font-size: 1.1rem;">
                SwiftGrid.Demo
            </strong>
        </div>
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <FluentAnchor Href="https://learn.microsoft.com/aspnet/core/" Target="_blank">
                About
            </FluentAnchor>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
